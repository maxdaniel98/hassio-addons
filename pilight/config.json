{
  "image": "pschmitt/hassio-addon-{arch}-pilight",
  "arch": ["amd64", "i386", "armhf"],
  "name": "pilight",
  "version": "1.3.1",
  "slug": "pilight",
  "description": "Pilight server",
  "startup": "services",
  "boot": "auto",
  "devices": ["/dev/mem:/dev/mem:rw","/dev/ttyUSB0"],
  "privileged": ["SYS_RAWIO"],
  "gpio": "true",
  "options": {
  "hardware": {
    "433nano": {
      "comport": "/dev/ttyUSB0"
    }
  }
},
  "schema": "false",
  "webui": "http://[HOST]:[PORT:5001]",
  "ports": {
    "5000/tcp": 5000,
    "5001/tcp": 5001
  }
}
