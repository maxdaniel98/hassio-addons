{
  "image": "maxdaniel98/hassio-addon-{arch}-pilight",
  "arch": ["amd64", "i386", "armhf"],
  "name": "pilight",
  "version": "1.3.1",
  "slug": "pilight",
  "description": "Pilight server",
  "startup": "services",
  "boot": "auto",
  "devices": ["/dev/mem:/dev/mem:rw"],
  "privileged": ["SYS_RAWIO"],
  "gpio": "true",
  "options": {
    "device": "/dev/ttyUSB0"
  },
  "schema": {"device": "str"},
  "webui": "http://[HOST]:[PORT:5001]",
  "ports": {
    "5000/tcp": 5000,
    "5001/tcp": 5001
  }
}
