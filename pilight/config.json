{
  "image": "pschmitt/hassio-addon-{arch}-pilight",
  "arch": ["amd64", "i386", "armhf"],
  "name": "pilight",
  "version": "1.3.1",
  "slug": "pilight",
  "description": "Pilight server",
  "startup": "services",
  "boot": "auto",
  "devices": ["/dev/mem:/dev/mem:rw","/dev/ttyUSB0:/dev/ttyUSB0:rwm"],
  "privileged": ["SYS_RAWIO"],
  "gpio": "true",
  "options": {
	"devices": {},
	"rules": {},
	"gui": {},
	"settings": {
		"port": 5000,
		"log-level": 4,
		"pid-file": "/var/run/pilight.pid",
		"log-file": "/var/log/pilight.log",
		"webserver-enable": 1,
		"webserver-root": "/usr/local/share/pilight/webgui",
		"webserver-http-port": 5001,
		"webserver-cache": 1,
		"gpio-platform": "none"
	},
	"hardware": {
    "433nano": {
      "comport": "/dev/ttyUSB0"
    }
  },
	"registry": {}
},
  "schema": "false",
  "webui": "http://[HOST]:[PORT:5001]",
  "ports": {
    "5000/tcp": 5000,
    "5001/tcp": 5001
  }
}
